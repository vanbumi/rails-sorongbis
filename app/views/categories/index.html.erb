<div class="col-lg-12" style="margin-top: 20px;">
  <p id="notice"><%= notice %></p>

  <h1>List Categories</h1>
  <br>
  <span class="glyphicon glyphicon-plus"></span><%= link_to 'Add New', new_category_path, class:'btn btn-primary btn-xs' %>
  <table class="table table-hover table-responsive">
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <!--<th>Level</th>-->
        <th colspan="3">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td><%= category.name %></td>
          <td><%= category.description %></td>
          <% if category.level == 'Parent' %>
            <!--<td><span class="label label-info"><%= category.level %></span></td>-->
          <% else %>
            <!--<td><span class="label label-warning"><%= category.level %></span></td>-->
          <% end %>
          <td><%= link_to 'Show', category, class:'btn btn-primary btn-xs' %></td>
          <td><%= link_to 'Edit', edit_category_path(category), class:'btn btn-success btn-xs' %></td>
          <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger btn-xs' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <!--hold dulu-->
  <% @parents.each do |par| %>
      <% par.name %>
  <% end %>
  <br>



</div>