<div class="col-lg-11">
  <p id="notice"><%= notice %></p>

  <h1>List Sub Categories</h1>
  <br>
  <span class="glyphicon glyphicon-plus"></span><%= link_to 'Add New', new_sub_category_path, class: "btn btn-primary btn-sm" %>
  <table class="table table-hover table-responsive">
    <thead>
      <tr>
        <th>Sub Category</th>
        <th>Parent Category</th>
        <th>Description</th>
        <th>Level</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @sub_categories.each do |sub_category| %>
        <tr>
          <td><%= sub_category.name %></td>
          <td><%= sub_category.category.name %></td>
          <td><%= sub_category.description %></td>
          <td><%= sub_category.level %></td>
          <td><%= link_to 'Show', sub_category, class:"btn btn-primary btn-xs" %></td>
          <td><%= link_to 'Edit', edit_sub_category_path(sub_category), class:"btn btn-success btn-xs" %></td>
          <td><%= link_to 'Destroy', sub_category, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger btn-xs" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>



</div>